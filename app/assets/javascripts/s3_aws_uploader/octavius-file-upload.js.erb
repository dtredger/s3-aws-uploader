"use strict";

// Constructor
function OctaviusUpload(modelName, fieldName) {

  var inputReplacementSelector = '#' + modelName + '_' + fieldName;
  var fileInputSelector = '#' + fieldName;
  var progressBarSelector = '#' + fieldName + '_progress'; 
  var replaceFileId = fileInputSelector + '_replace_file';
  var chooseFileSelector = fileInputSelector + '_choose_file';
  this.buttonClassStyle = 'btn btn-default btn-xs';

  var self = this;

  $('body').on("click", replaceFileId, function() {
    $(fileInputSelector).click();
  });

  $('body').on("click", chooseFileSelector, function() {
    $(fileInputSelector).click();
  });

  $(fileInputSelector).fileupload({ 
    autoUpload: false,
    add: function(e, data) {

      resetProgressBar();

      $.ajax({
        url: $(fileInputSelector).data('path'),
        type: 'POST',
        dataType: 'json',
        async: false,
        success: function(retData) {

          $(fileInputSelector).fileupload('option', {
            url: retData.url,
            dataType: 'xml',
            formData: [
              {
                name: 'key',
                value: retData.key
              },
              {
                name: 'acl',
                value: retData.acl
              },
              {
                name: 'policy',
                value: retData.policy
              },
              {
                name: 'signature',
                value: retData.signature
              },
              {
                name: 'AWSAccessKeyId',
                value: retData.AWSAccessKeyId
              },
              {
                name: 'success_action_status',
                value: 201
              }
            ]
          });

          data.submit();

        }
      });
    },
    progress: function(e, data) {
      var fileUploadProgress = parseInt(data.loaded / data.total * 100, 10);

      $(progressBarSelector).css('width', fileUploadProgress+'%').attr('aria-valuenow', fileUploadProgress);
    },
    done: function(e, data) {

      var rId = replaceFileId.replace('#', '');
      var newFilenameId = rId + "_filename";
      var statusHTML = '<button id= "' + rId + '" type="button" class="<%= S3AwsUploader.config.button_style %>">replace file</button><div id="' + newFilenameId +'" class="file-upload-filename">' + data.files[0].name + '</div>';

      var fileStatusSelector = fileInputSelector + '_status'

      if(!$(replaceFileId).length) {
        $(fileStatusSelector).html(statusHTML);
      } else {
        $('#' + newFilenameId).html(data.files[0].name);
      }

      var fileAmazonFullPath = $(data.result).find("PostResponse > Location").text();
      $(inputReplacementSelector).val(fileAmazonFullPath);
    },
    fail: function(e, data) {
      var errorMessage = $(data.jqXHR.responseXML).find("Error > Message").text();
      var newFilenameId = replaceFileId + "_filename";

      resetProgressBar();
      $(newFilenameId).html('File failed to upload');

      alert('File failed to upload\n\n' + errorMessage);
    }
  });

  function resetProgressBar() {
    $(progressBarSelector).css('width', '0%').attr('aria-valuenow', 0);
  }
}

